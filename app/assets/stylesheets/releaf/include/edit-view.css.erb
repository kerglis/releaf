  border: 1px solid #f00a0a;
}



/* nested fields */
.nested-wrap
{
    position: relative;
}

.nested-wrap:not([data-name="translations"])
{
    clear: both;
    padding-right: 29px;
}

.nested-wrap .nested-wrap
{
    padding-right: 0px;
}


.nested-wrap .list .item:not(tr)
{
    border: 1px solid #d4d4d4;
    padding: 0 20px 11px 20px;
    margin-bottom: 20px;
    position: relative;
    background: #fff;
}

.nested-wrap .list .item.template
{
    display: none;
}

.nested-wrap .list .item:after:not(tr)
{
	content: '\00a0';
	display: block;
	clear: both;
	height: 0;
	visibility: hidden;
}

.nested-wrap .list[data-sortable] .item
{
    padding-top: 30px;
}

.nested-wrap .list[data-sortable] .item .handle
{
    position: absolute;
    background: #ddd;
    height: 35px;
    left: 0;
    right: 0;
    top: 0;
    cursor: pointer;
}

.nested-wrap .remove-item-box
{
    position: absolute;
    right: -1px;
    top: -1px;
    width: auto;
}

.nested-wrap .remove-item-box .button
{
    padding: 6px 10px 7px 10px;
}

.view-edit form .section .nested-wrap .field
{
    width: 360px;
}

.view-edit form .section .nested-wrap .field input[type="text"],
.view-edit form .section .nested-wrap .field input[type="password"],
.view-edit form .section .nested-wrap .field select
{
    width: 360px;
}


.view-edit form .section .nested-wrap .nested-wrap .field
{
    width: 340px;
}
.view-edit form .section .nested-wrap .field.type_richtext,
.view-edit form .section .nested-wrap .field textarea
{
    width: 775px;
}

.view-edit form .section .nested-wrap .nested-wrap .field input[type="text"],
.view-edit form .section .nested-wrap .nested-wrap .field input[type="password"],
.view-edit form .section .nested-wrap .nested-wrap .field select
{
    width: 340px;
}


.view-edit form .section .nested-wrap .field
{
    margin-right: 20px;
}

.view-edit .header .toolbox-wrap
{
    font-size: 13px;
    position: absolute;
    right: 0;
    top: 0;
}

.view-edit .header .toolbox .trigger
{
    height: 40px;
    width: 40px;
    text-align: center;
    line-height: 40px;
    padding: 0;
