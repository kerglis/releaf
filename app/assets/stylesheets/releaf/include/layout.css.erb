/* skip links */
body > .skip-links
{
    position: absolute;
    top: -300px;
    width: 80%;
    left: 100px;
    z-index: 20;
    overflow: visible;
}

body > .skip-links a
{
    position: absolute;
    top: 0;
    z-index: 30;
}

body > .skip-links a:active,
body > .skip-links a:focus
{
    top:    320px;
    height: 1.6em;
}


/* main layout */

body > header
{
    background: #111111;
    color: #d8d8d8;
    height: 60px;
    position: relative;
    z-index: 10;
}

body > .side,
body > .main
{
    position: relative;
    min-height: 100%;
}

body > .side > *:first-child
{
    padding-top: 60px;
}

body > .side
{
    background: #1d1d1d;
    color: #d3d3d3;
    position: absolute;
    width: 240px;
    left: 0;
    top: 0;
    z-index: 5;
}
body > .side > nav
{
    margin-bottom: 50px;
}

body > .side > footer
{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 240px;
    z-index: 9;
    margin-top: -50px;
}
body.side-compact > .side > footer
{
  width: 40px;
  overflow: hidden;
}

body > .main
{
    position: relative;
    padding: 0 40px 50px 280px;
    z-index: 1;
}

body .main footer
{
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    margin: 0 40px 0px 280px;
    z-index: 10;
    background: #fff;
}
body.side-compact .main > footer
{
    margin-left: 80px;
}


body .main footer .tools
{
    height: 40px;
    background: #e6e6e6;
    color: #818181;
    border: 1px solid #c5c5c5;
    border-bottom: 0;
}
body .main footer .tools > .primary
{
    float: right;
}
body .main footer .tools > .secondary
{
    float: left;
}


body > .side > footer,
body .main footer .tools
{
    height: 40px;
}


/* menu hiding and compacting stuff */

header .side-opener
{
    position: absolute;
    left: 100px;
    top: 10px;
    display: none;
}

body > .side .compacter
{
  text-align: right;
  border-bottom: 1px solid #282828;
}
body > .side .compacter button
{
  padding: 0;
  height: 39px;
  width: 45px;
  background: #171717;
}
body > .side .compacter button:hover
{
  background: #282828;
}
body > .side .compacter .toggle-angle-icon
{
    color: #37b1a7;
    font-size: 20px;
}


@media all and (max-width: 1000px)
{
    body > .main
    {
        padding-left: 40px;
    }
    body .main footer
    {
        margin-left: 0px;
        left: 40px;
    }
    body > header .side-opener
    {
        display: block;
    }

    body .side .compacter
    {
        display: none;
    }

    body .side nav
    {
        padding-top: 60px;
    }
}

/* compact sidebar stuff */
body.side-compact > .side
{
    width: 40px;
}

body.side-compact > .side .compacter button
{
    width: 40px;
}

body.side-compact  > .main
{
    padding-left: 80px;
}

body.side-compact > footer
{
    left: 80px;
}

body.side-compact > .side nav li .name,
body.side-compact > .side nav li .collapser
{
    display: none;
}

body.side-compact > .side nav li .trigger
{
    padding-right: 20px;
}
body.side-compact > .side nav > ul > li.open > .trigger .name
{
    position: absolute;
    top: 0;
    left: 40px;
    height: 30px;
    width: 227px;
    padding: 9px 0 0 14px;
    display: block;
    background: #000;
}

body.side-compact > .side nav > ul > li.open > .trigger
{
    background-color: #050505;
    color: #fff;
}

body.side-compact > .side nav > ul > li.active > .trigger,
body.side-compact > .side nav > ul > li.active > .trigger .name
{
    background-color: #37b1a7;
}
body.side-compact > .side nav > ul > li.open > ul
{
    position: absolute;
    top: 39px;
    left: 41px;
    width: 240px;
    display: block;
    background: #000;
}
body.side-compact > .side nav > ul > li > ul
{
    display: none;
}
body.side-compact > .side nav > ul > li.open > ul .name
{
    display: block;
}
body > .side-compact-overlay
{
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 3;
    display: none;

}


body > header > .item
{
    display: inline-block;
    margin-left: 20px;
}

/* side */
body > .side nav li
{
    border-bottom: 1px solid #282828;
    position: relative;
}

body > .side nav li .collapser
{
    position: absolute;
    right: 0;
    top: 0;
    color: #4a4a4a;
}
body > .side nav li .collapser button
{
    padding: 0;
    background-color: transparent;
    width: 40px;
    height: 40px;
    display: block;
}


body > .side nav li li
{
    background: #282828;
    border-bottom: none;
}

body > .side nav li .trigger
{
    color: #d3d3d3;
    display: block;
    padding: 5px;
    text-decoration: none;
    cursor: pointer;
    padding: 10px 40px 10px 13px;
}
body > .side nav li .trigger.active_item i.active
{
    display: inline;
    width: auto;
}
body > .side nav li .trigger i
{
    display: inline-block;
}
body > .side nav > ul > li > .trigger:hover
{
    background-color: #050505;
    color: #fff;
}
body > .side nav .trigger:hover
{
    color: #fff;
}
body > .side nav > ul > li > .trigger:hover .collapser
{
  color: #929292;
}
body > .side nav > ul > li.active > .trigger
{
  background-color: #37b1a7;
  color: #111111;
}
body > .side nav > ul > li.active > .trigger .collapser
{
  color: #111111;
}

body > .side nav > ul > li > .trigger > .name
{
    padding: 0 0 0 8px;
}

body > .side nav li li .trigger
{
    color: #a6a6a6;
    position: relative;
    padding: 4px 40px 5px 50px;
}

body > .side nav li li:first-child .trigger
{
    padding-top: 10px;
}
body > .side nav li li:last-child .trigger
{
    padding-bottom: 14px;
}

body > .side nav li li .trigger i
{
    position: absolute;
    top: 7px;
    right: 0px;
    display: none;
}

body > .side nav li li .trigger.active_item
{
    color: #ffffff;
    background: #383838;
}
body > .side nav li li .trigger.active_item i
{
    display: block;
    position: absolute;
    right: -1px;
    top: 1px;
    font-size: 28px;
}

body > .side nav li li:first-child .trigger.active_item i
{
    top: 6px;
}


body > .side nav li.collapsed ul
{
    display: none;
}


/* Header */
header > .brand {
    display: block;
    background-image: url(<%= asset_path("releaf/brand.png") %>);
    background-repeat: no-repeat;
    width: 110px;
    height: 33px;
    text-decoration: none;
    float: left;
    margin: 13px 0 0 13px;
}

header > ul {
    float: right;
}

header > ul > li {
    float: left;
}

header > ul > li > a {
    display: block;
    text-decoration: none;
    height: 60px;
}

header .profile{
  padding-right: 1px;
}
header .profile a{
    position: relative;
    width: 237px;
    color: #d8d8d8;
    border-left: 1px solid #242424;
}
header .profile a:hover{
    background-color: #242424;
    color: #fff;
}
header .profile a > .name{
  position: absolute;
  top: 20px;
  left: 25px;
  display: block;
  width: 152px;
}

header .profile a > .avatar{
  position: absolute;
  top: 12px;
  right: 12px;
  display: block;
  width: 36px;
}

header .sign-out button{
    position: relative;
    background-color: #242424;
    color: #37b1a7;
    width: 60px;
    height: 60px;
}
header .sign-out button:hover {
    background-color: #37b1a7;
    color: #242424;
}
header .sign-out button i
{
    font-size: 18px;
}

/* dialog */

.dialog
{
    margin: 0 auto;
    background-color: white;
    box-shadow: 1px 3px 5px 0px rgba(0, 0, 0, 0.6);
}

.main .dialog
{
    margin-top: 40px;
}

.dialog .header
{
    padding-right: 50px;
}

.dialog .content
{
    position: relative;
}

.dialog .footer
{
    position: relative;
    background-color: #d9d9d9;
    border-top: #c5c5c5 1px solid;
    text-align: right;
}

.dialog .footer form
{
    display: inline-block;
}

.dialog .footer .button.secondary
{
    border-left: #c5c5c5 1px solid;
}

.fancybox-inner .dialog .header
{
    margin-top: 0;
}

.fancybox-inner .dialog .header .close,
.fancybox-inner > .close
{
    position: absolute;
    right: 0;
    top: 0;
    height: 40px;
}



/* Delete dialog and delete restricted dialog */
.delete_dialog
{
    width: 390px;
}
.delete-restricted-dialog
{
    width: 490px;
}
.delete_dialog .content
{
    padding: 37px 10px 55px;
    text-align: center;
}
.delete-restricted-dialog .content
{
    padding: 37px 10px 25px;
    text-align: center;
}

.delete_dialog .content i,
.delete-restricted-dialog .content i
{
    display: block;
    margin: 0 auto;
    border-radius: 40px;
    width: 50px;
    background-color: #d4d4d4;
    color: white;
    font-size: 3.57em;
    padding: 9px;
    text-align: center;
    line-height: 1em;
    margin-bottom: 22px;
}

.delete_dialog .content .question,
.delete-restricted-dialog .content .message
{
    font-size: 2.2857em;
    line-height: 1.25em;
    margin-bottom: 40px;
    font-family: 'robotoregular';
    font-weight: normal;
}
.delete_dialog .content .description
{
    color: #37b1a7;
    font-size: 1em;
    line-height: 1.4em;
    font-weight: bold;
}
.delete-restricted-dialog .content .restricted-relations
{
    margin-top: 10px;
    height: 95px;
    overflow-y: auto;
    color: #37b1a7;
    font-size: 1em;
    line-height: 1.4em;
    font-weight: bold;
}

/* notifications */
body > .notifications
{
    position: fixed;
    z-index: 60;
    top: -5px;
    left: 30%;
    width: 40%;
}

body > .notifications .notification
{
    position: relative;

    background: #F8F8F8;
    color: #636363;

    border-radius: 0;
    padding: 7px 35px 0 14px;
    margin-top: 15px;
    text-shadow: none;
    line-height: 24px;

    box-shadow: 0 0 10px 5px rgba(0, 0, 0, 0.3);
}

body > .notifications .notification[data-type="success"]
{
    background-color: #ddf4d0;
    color: #468847;
}

body > .notifications .notification[data-type="error"]
{
    background-color: #eed3d7;
    color: #b94a48;
}
body > .notifications .notification > .icon
{
    float: left;
    margin-left: 10px;
}

body > .notifications .notification > .content
{
    margin-left: 40px;
    margin-right: 30px;
    padding-bottom: 9px;
    text-align: center;
}
body > .notifications .notification > .close
{
    position: absolute;
    right: 0;
    top: 0;
}


.flash
{
    display: none;
}


